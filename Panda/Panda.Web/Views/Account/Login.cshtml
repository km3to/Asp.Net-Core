@using Panda.BindingModels.InputModels
@model AccountLoginInputModel

@{
    this.ViewData["Title"] = "Log in";
}

<main>
    <h1 class="text-center text-panda">Login</h1>
    <hr class="bg-panda w-50" style="height: 2px" />
    <form asp-action="Login" class="w-50 mx-auto">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username" class="text-panda"></label>
            <input asp-for="Username" class="form-control" placeholder="Username..." />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="text-panda"></label>
            <input asp-for="Password" class="form-control" placeholder="Password..." />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn bg-panda text-white" style="background: black">Login</button>
        </div>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}